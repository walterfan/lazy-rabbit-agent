# AI Test Agent Configuration

# LLM Provider API Keys
# Choose one based on your provider preference
OPENAI_API_KEY=sk-your-openai-api-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# Default LLM Provider (openai or anthropic)
LLM_PROVIDER=openai

# Model Configuration
# OpenAI: gpt-4, gpt-4-turbo, gpt-3.5-turbo
# Anthropic: claude-3-5-sonnet-20241022, claude-3-opus-20240229
MODEL_NAME=gpt-4

# Agent Configuration
MAX_ITERATIONS=3
PER_RUN_TIMEOUT=30m
SOAK_DURATION=30m

# Resource Limits
CPU_CORES=4
MEMORY_GB=8
DISK_GB=10

# Thresholds
MEMORY_GROWTH_THRESHOLD=25
GOROUTINE_GROWTH_THRESHOLD=10

# Safety Settings
ALLOW_DESTRUCTIVE=false
PRODUCTION_CONSENT_TOKEN=

# Logging
LOG_LEVEL=INFO
